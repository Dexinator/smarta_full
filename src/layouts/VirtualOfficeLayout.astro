                <div class="w-20 h-20 sm:w-24 sm:h-24 bg-white/20 rounded-full flex items-center justify-center flex-shrink-0">
                  <span class="text-5xl sm:text-6xl">{bannerCTA.emoji}</span>
                </div>
                <div class="text-white">
                  <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-2 sm:mb-3">
                    {bannerCTA.title}
                  </h2>
                  <p class="text-base sm:text-lg md:text-xl opacity-90">
                    {bannerCTA.subtitle}
                  </p>
                </div>
              </div>

              <!-- Flecha (solo visible en desktop) -->
              <div class="hidden sm:flex flex-shrink-0">
                <svg class="w-10 h-10 md:w-12 md:h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>

              <!-- Texto "Toca para explorar" en m칩vil -->
              <div class="sm:hidden text-white/80 text-sm flex items-center gap-2">
                <span>Toca para explorar</span>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </div>
        </a>
      </section>
    )}

    <!-- Secci칩n 5: M치s informaci칩n y horarios -->
    <section id="mas-info-horarios" class="bg-slate-50 dark:bg-slate-800 pt-24 pb-12 sm:pt-28 sm:pb-16 md:pt-32 md:pb-20">
      <div class="container mx-auto px-4 max-w-6xl">
        <!-- T칤tulo -->
        <div class="text-center mb-8 sm:mb-12">
          <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-slate-900 dark:text-white mb-2 sm:mb-3">
            M치s informaci칩n y horarios
          </h2>
          <p class="text-base sm:text-lg md:text-xl text-slate-600 dark:text-slate-300 mt-3">
            Toca o haz click en la imagen para visitar
          </p>
        </div>

        <!-- Grid de burbujas con im치genes -->
        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-4 sm:gap-6">
          {burbujas.map((burbuja) => (
            <a
              href={burbuja.link}
              class="flex flex-col items-center group"
            >
              <div class="w-24 h-24 sm:w-28 sm:h-28 md:w-32 md:h-32 rounded-full shadow-lg group-hover:shadow-xl group-active:scale-95 transform transition-all overflow-hidden mb-3">
                <img
                  src={burbuja.img.src}
                  alt={burbuja.title}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>
              <h3 class="text-sm sm:text-base md:text-lg font-semibold text-slate-900 dark:text-white text-center px-2">
                {burbuja.title}
              </h3>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Secci칩n 6: Lectura F치cil -->
    {lecturaFacil?.visible && (
      <section id="transcripcion-lectura-facil" class="min-h-[100dvh] bg-white dark:bg-slate-900 pt-24 pb-12 sm:pt-28 sm:pb-16 md:pt-32 md:pb-20 flex items-center">
        <div class="w-full px-4 sm:container sm:mx-auto sm:max-w-4xl">
          <div class="text-center mb-8">
            <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-4">
              Lectura F치cil
