                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-full sm:w-64 md:w-72 h-32 sm:h-36 md:h-40 bg-SM-yellow hover:bg-yellow-500 active:bg-yellow-600 text-slate-900 rounded-2xl font-bold text-xl sm:text-2xl transition-all transform active:scale-95 shadow-xl hover:shadow-2xl flex flex-col items-center justify-center gap-2"
