<style>
  /* Scroll suave */
  html {
    scroll-behavior: smooth;
  }

  /* Animaciones */
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
  }

  .animation-delay-200 {
    animation-delay: 200ms;
  }

  /* Estilos para lectura f치cil */
  .lectura-facil-content {
    font-size: 1.125rem;
    line-height: 1.8;
    letter-spacing: 0.01em;
  }

  .lectura-facil-content p {
    margin-bottom: 1.5rem;
  }

  /* Mejoras de accesibilidad */
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }

    .animate-bounce,
    .animate-fade-in-up {
      animation: none;
    }
  }

  /* Asegurar que el video sea responsive */
  #vertical-video {
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  /* En m칩viles, ajustar el video para formato vertical */
  @media (max-width: 768px) and (orientation: portrait) {
    #vertical-video {
      width: 100%;
      height: auto;
      object-fit: contain;
      background: #000;
    }
  }
</style>

<script>
  // Control del video para mejorar rendimiento
  document.addEventListener('DOMContentLoaded', () => {
    const video = document.getElementById('vertical-video') as HTMLVideoElement;

    if (video) {
      // Pausar el video cuando no est칠 visible
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            video.play();
          } else {
            video.pause();
          }
        });
      }, { threshold: 0.25 });

      observer.observe(video);
    }

    // Scroll snap del video a la segunda secci칩n
    let isSnapping = false;
    const videoSection = document.getElementById('video-section');
    const secondSection = document.querySelector('#main-content section:nth-child(2)') as HTMLElement;

    if (videoSection && secondSection) {
      let scrollTimeout: number;

      window.addEventListener('scroll', () => {
        if (isSnapping) return;

        clearTimeout(scrollTimeout);
        scrollTimeout = window.setTimeout(() => {
          const scrollY = window.scrollY;
          const videoHeight = videoSection.offsetHeight;
          const threshold = videoHeight * 0.5; // 50% del video

          // Si estamos entre el video y la mitad, hacer snap
          if (scrollY > 100 && scrollY < threshold) {
            isSnapping = true;
            secondSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
            setTimeout(() => { isSnapping = false; }, 1000);
          } else if (scrollY >= threshold && scrollY < videoHeight - 100) {
            isSnapping = true;
            secondSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
            setTimeout(() => { isSnapping = false; }, 1000);
          }
        }, 150);
      });
    }

    // Toggle para contenido de Lectura F치cil
    const toggleButton = document.getElementById('toggle-lectura-facil');
    const contenido = document.getElementById('contenido-lectura-facil');
    const icon = document.getElementById('icon-lectura-facil');

    if (toggleButton && contenido && icon) {
      toggleButton.addEventListener('click', () => {
        const isExpanded = toggleButton.getAttribute('aria-expanded') === 'true';

        if (isExpanded) {
          // Colapsar
          contenido.classList.add('hidden');
          toggleButton.setAttribute('aria-expanded', 'false');
          icon.style.transform = 'rotate(0deg)';
        } else {
          // Expandir
          contenido.classList.remove('hidden');
          toggleButton.setAttribute('aria-expanded', 'true');
          icon.style.transform = 'rotate(180deg)';

          // Scroll suave al contenido despu칠s de expandir
          setTimeout(() => {
            contenido.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
          }, 100);
        }
      });
    }
  });
</script>
