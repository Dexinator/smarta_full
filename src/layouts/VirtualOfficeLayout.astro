              <button
                onclick="document.getElementById('transcripcion-lectura-facil').scrollIntoView({ behavior: 'smooth', block: 'start' })"
                class="w-full sm:w-64 md:w-72 h-32 sm:h-36 md:h-40 bg-SM-blue hover:bg-blue-700 active:bg-blue-800 text-white rounded-2xl font-bold text-xl sm:text-2xl transition-all transform active:scale-95 shadow-xl hover:shadow-2xl flex flex-col items-center justify-center gap-2"
