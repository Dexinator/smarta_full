---
// Audio Guides Section - SecciÃ³n de audioguÃ­as dividida en 2
import { Image } from 'astro:assets';
import muralesImg from '../../assets/images/main_page/murales (audioguÃ­a).jpg';
import sotoImg from '../../assets/images/main_page/soto (audioguia).jpg';
import { useTranslations, type Locale } from '../../i18n/utils';

export interface Props {
  lang?: string;
}

const { lang = "es" } = Astro.props;

const guideImages = {
  murals: muralesImg,
  'isla-soto': sotoImg
};

const t = useTranslations(lang as Locale).audioGuides;
---

<section
  id="audioguides"
  class="min-h-screen flex flex-col justify-center py-16 bg-gradient-to-br from-SM-blue/5 via-white to-SM-yellow/5 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900"
>
  <div class="container mx-auto px-4">
    <!-- TÃ­tulo de la secciÃ³n -->
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-slate-100 mb-4">
        {t.title}
      </h2>
      <p class="text-lg md:text-xl text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
        {t.subtitle}
      </p>
    </div>

    <!-- Grid de 2 audioguÃ­as -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 max-w-5xl mx-auto">
      {t.guides.map((guide, index) => (
        <a
          href={guide.link}
          class="group relative overflow-hidden rounded-3xl bg-white dark:bg-slate-800 shadow-xl transition-all duration-500 hover:shadow-2xl hover:scale-[1.02]"
        >
          <!-- Imagen de fondo -->
          <div class="relative h-64 md:h-72 overflow-hidden">
            <Image
              src={guideImages[guide.id as keyof typeof guideImages]}
              alt={guide.title}
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              widths={[400, 800, 1200]}
              sizes="(max-width: 768px) 100vw, 50vw"
              quality={85}
              loading="lazy"
            />
            <!-- Overlay con gradiente -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent"></div>

            <!-- Badge de duraciÃ³n y paradas -->
            <div class="absolute top-4 right-4 flex gap-2">
              <span class="px-3 py-1 bg-white/90 backdrop-blur-sm rounded-full text-xs font-semibold text-slate-800">
                {guide.duration}
              </span>
              <span class="px-3 py-1 bg-white/90 backdrop-blur-sm rounded-full text-xs font-semibold text-slate-800">
                {guide.stops}
              </span>
            </div>

            <!-- TÃ­tulo sobre la imagen -->
            <div class="absolute bottom-4 left-6 right-6">
              <h3 class="text-2xl md:text-3xl font-bold text-white mb-2">
                {guide.title}
              </h3>
            </div>
          </div>

          <!-- Contenido -->
          <div class="p-6">
            <!-- DescripciÃ³n -->
            <p class="text-slate-600 dark:text-slate-300 mb-4">
              {guide.description}
            </p>

            <!-- CaracterÃ­sticas -->
            <div class="flex flex-wrap gap-2 mb-4">
              {guide.features.map((feature) => (
                <span class="px-3 py-1 bg-SM-blue/10 dark:bg-SM-blue/20 rounded-full text-xs font-medium text-SM-blue dark:text-blue-300">
                  {feature}
                </span>
              ))}
            </div>

            <!-- Call to action -->
            <div class="flex items-center justify-between">
              <span class="text-SM-blue dark:text-blue-400 font-semibold group-hover:underline">
                {t.cta}
              </span>
              <div class="w-10 h-10 rounded-full bg-SM-blue/10 dark:bg-SM-blue/20 flex items-center justify-center group-hover:bg-SM-blue group-hover:text-white transition-all duration-300">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </div>

          <!-- NÃºmero decorativo -->
          <div class="absolute top-4 left-6 text-6xl font-bold text-white/20">
            {(index + 1).toString().padStart(2, '0')}
          </div>

          <!-- Efecto de onda en hover -->
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -skew-x-12 translate-x-[-200%] group-hover:translate-x-[200%] transition-transform duration-1000"></div>
        </a>
      ))}
    </div>

    <!-- InformaciÃ³n adicional -->
    <div class="mt-12 text-center">
      <p class="text-base md:text-lg text-slate-500 dark:text-slate-400 mb-4">
        {t.accessibilityInfo}
      </p>
      <div class="flex justify-center gap-4">
        <div class="flex items-center gap-2">
          <span class="w-8 h-8 rounded-full bg-SM-yellow/20 flex items-center justify-center">
            ðŸŽ§
          </span>
          <span class="text-sm text-slate-600 dark:text-slate-400">{t.accessibilityFeatures.audio}</span>
        </div>
        <div class="flex items-center gap-2">
          <span class="w-8 h-8 rounded-full bg-SM-yellow/20 flex items-center justify-center">
            ðŸ“±
          </span>
          <span class="text-sm text-slate-600 dark:text-slate-400">{t.accessibilityFeatures.mobile}</span>
        </div>
        <div class="flex items-center gap-2">
          <span class="w-8 h-8 rounded-full bg-SM-yellow/20 flex items-center justify-center">
            â™¿
          </span>
          <span class="text-sm text-slate-600 dark:text-slate-400">{t.accessibilityFeatures.accessible}</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Elementos decorativos -->
  <div class="absolute top-20 right-10 w-24 h-24 bg-SM-yellow/10 rounded-full filter blur-2xl"></div>
  <div class="absolute bottom-20 left-10 w-32 h-32 bg-SM-blue/10 rounded-full filter blur-3xl"></div>
</section>