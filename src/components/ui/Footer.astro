---
// Footer principal con enlaces y información legal
// Audioguías Murales Santa Marta

import { Image } from 'astro:assets';
import PartnersSlider from '../react/PartnersSlider.jsx';
import asprodesLogo from '../../assets/images/asprodes-logo.png';
import aspasLogo from '../../assets/images/aspas-logo.png';
import audaceticsLogo from '../../assets/images/audacetics-logo.png';
import ayuntamientoLogo from '../../assets/images/ayuntamiento-logo.png';
import turismoColaboradorLogo from '../../assets/images/turismo-santa-marta.png';
import contentEs from '../../data/content-es.json';
import contentEn from '../../data/content-en.json';

// Configuración de partners para el slider - organizados en dos filas
const partners = [
  // Primera fila
  [
    {
      src: ayuntamientoLogo.src,
      alt: "Logotipo Ayuntamiento de Santa Marta de Tormes",
      name: "Ayuntamiento"
    },
    {
      src: turismoColaboradorLogo.src,
      alt: "Logotipo Turismo de Santa Marta de Tormes, Salamanca",
      name: "Turismo Santa Marta"
    }
  ],
  // Segunda fila
  [
    {
      src: audaceticsLogo.src,
      alt: "Logotipo Audacetics",
      name: "Audacetics"
    },
    {
      src: asprodesLogo.src,
      alt: "Logotipo ASPRODES, Plena inclusión, Castilla y León",
      name: "ASPRODES"
    },
    {
      src: aspasLogo.src,
      alt: "Logotipo ASPAS, Asociación de Padres de Niños Sordos, Salamanca",
      name: "ASPAS"
    }
  ]
];

export interface Props {
  lang?: string;
}

const { lang = "es" } = Astro.props;

// Seleccionar contenido según el idioma
const content = lang === "en" ? contentEn : contentEs;
const footerContent = content.footer;
---

<footer class="bg-white dark:bg-slate-900 border-t border-slate-200 dark:border-slate-700 mt-auto">
  <div class="container mx-auto px-4 py-8 md:py-12">

    <!-- Logos de colaboradores -->
    <div class="mb-12">
      <PartnersSlider
        partners={partners}
        autoPlayInterval={4000}
        gridLayout={true}
        client:load
      />
    </div>

    <!-- Información de contacto -->
    <div class="max-w-xl mx-auto text-center mb-8">
      <div class="space-y-2 text-sm text-slate-600 dark:text-slate-300">
        <p class="inline-flex items-center gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 64 64" aria-hidden="true">
            <path d="M32,0C18.746,0,8,10.746,8,24c0,5.219,1.711,10.008,4.555,13.93c0.051,0.094,0.059,0.199,0.117,0.289l16,24
            C29.414,63.332,30.664,64,32,64s2.586-0.668,3.328-1.781l16-24c0.059-0.09,0.066-0.195,0.117-0.289C54.289,34.008,56,29.219,56,24
            C56,10.746,45.254,0,32,0z M32,32c-4.418,0-8-3.582-8-8s3.582-8,8-8s8,3.582,8,8S36.418,32,32,32z"/>
          </svg>
          <span aria-label={lang === "es" ? "Ubicación Plaza España, sin número - Santa Marta de Tormes (Salamanca)" : "Location Plaza España, no number - Santa Marta de Tormes (Salamanca)"}>
            {footerContent.contact.address}
          </span>
        </p>
        <p>
          <a
          href={`tel:${footerContent.contact.phone.replace(/\s/g, '')}`}
          target="_blank"
          rel="noopener noreferrer"
          aria-label={lang === "es" ? "Teléfono +34 923 200 005" : "Phone number +34 923 200 005 Link"}
          class="inline-flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-SM-blue transition-colors underline decoration-slate-400 decoration-dotted underline-offset-2 hover:decoration-solid hover:decoration-SM-blue"
          >
            <svg class="w-5 h-5 scale-x-[-1]" fill="currentColor" viewBox="0 0 24 24">
              <path d="M10.91 2.75h3a11.67 11.67 0 0 1-3.8 7.46 11.71 11.71 0 0 1-7.88 3h-.77V10.4L4 9.52l.84 1.42.59 1.06 1.07-.62a14.36 14.36 0 0 0 4.77-4.5L12 5.73l-1.22-.64-1-.52 1.09-1.82m0-1.25a1.26 1.26 0 0 0-1.07.61L8.75 3.93a1.24 1.24 0 0 0 .49 1.75l1 .52a13.06 13.06 0 0 1-4.36 4.1L5 8.89a1.25 1.25 0 0 0-1-.62 1.22 1.22 0 0 0-.41.07L1 9.22a1.25 1.25 0 0 0-.79 1.18v2.85a1.25 1.25 0 0 0 1.25 1.25h.75A13 13 0 0 0 15.14 2.88a1.26 1.26 0 0 0-1.25-1.38z"/>
            </svg>
            {footerContent.contact.phone}
          </a>
        </p>
        <p>
          <a
          href={`mailto:${footerContent.contact.email}`}
          target="_blank"
          rel="noopener noreferrer"
          aria-label={lang === "es" ? "correo info@turismosantamartadetormes.com" : "email info@turismosantamartadetormes.com link"}
          class="inline-flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-SM-blue transition-colors underline decoration-slate-400 decoration-dotted underline-offset-2 hover:decoration-solid hover:decoration-SM-blue"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentcolor">
              <path d="M3.02832 10L10.2246 14.8166C10.8661 15.2443 11.1869 15.4581 11.5336 15.5412C11.8399 15.6146 12.1593 15.6146 12.4657 15.5412C12.8124 15.4581 13.1332 15.2443 13.7747 14.8166L20.971 10M10.2981 4.06879L4.49814 7.71127C3.95121 8.05474 3.67775 8.22648 3.4794 8.45864C3.30385 8.66412 3.17176 8.90305 3.09111 9.161C3 9.45244 3 9.77535 3 10.4212V16.8C3 17.9201 3 18.4802 3.21799 18.908C3.40973 19.2843 3.71569 19.5903 4.09202 19.782C4.51984 20 5.07989 20 6.2 20H17.8C18.9201 20 19.4802 20 19.908 19.782C20.2843 19.5903 20.5903 19.2843 20.782 18.908C21 18.4802 21 17.9201 21 16.8V10.4212C21 9.77535 21 9.45244 20.9089 9.161C20.8282 8.90305 20.6962 8.66412 20.5206 8.45864C20.3223 8.22648 20.0488 8.05474 19.5019 7.71127L13.7019 4.06879C13.0846 3.68116 12.776 3.48735 12.4449 3.4118C12.152 3.34499 11.848 3.34499 11.5551 3.4118C11.224 3.48735 10.9154 3.68116 10.2981 4.06879Z" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            {footerContent.contact.email}
          </a>
        </p>
        <p>
          <a
            href="https://www.instagram.com/turismosantamartadetormes/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label={lang === "es" ? "Instagram @turismosantamartadetormes" : "Instagram @turismosantamartadetormes link"}
            class="inline-flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-SM-blue transition-colors underline decoration-slate-400 decoration-dotted underline-offset-2 hover:decoration-solid hover:decoration-SM-blue"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"/>
            </svg>
            {footerContent.contact.instagram}
          </a>
        </p>
      </div>
    </div>

    <!-- Separador -->
    <hr class="border-slate-200 dark:border-slate-700 my-8" />


    <!-- Información técnica -->
    <div class="mt-4 text-center">
      <p class="text-xs text-slate-500 dark:text-slate-400" aria-label={lang === "es" ? "Desarrollado con Astro + Tailwind CSS. Hecho con amor para la accesibilidad" : "Built with Astro + Tailwind CSS • Made with love for accessibility"}>
        {footerContent.technical.poweredBy} <span class="text-SM-blue font-medium">Astro</span> +
        <span class="text-SM-blue font-medium">Tailwind CSS</span> •
        {footerContent.technical.madeWith}
      </p>
    </div>
  </div>
</footer>